@model Pie

<div class="col-sm-12 col-lg-12 col-md-12">
    <div class="thumbnail">
        <img src="@Model.ImgThumbUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <h4>@Model.ShortDescription</h4>
            <p>@Model.LongDescription</p>
        </div>
         <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="Cart"
                   asp-action="AddToCart"
                   asp-route-pieId="@Model.id"
                   >
                    Add to card
                </a>
            </p>
        </div>
    </div>
</div>